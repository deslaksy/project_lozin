# Задание 2
def ShiftLeft3(a, b, c):
    print(f"До сдвига: A={a}, B={b}, C={c}")
    temp = a
    a = c
    c = b
    b = temp
    return a, b, c

print("\n--- Первый набор чисел ---")
a1 = input("Введите A1: ")
b1 = input("Введите B1: ")
